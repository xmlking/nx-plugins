{
  "lerna": "3.20.2",
  "npmClient": "yarn",
  "version": "independent",
  "packages": ["libs/*", "apps/*"],
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/*.e2e.ts",
    "**/*.md",
    "**/*.spec.ts",
    "**/jest.config.js",
    "**/ng-package.json",
    "**/package.json",
    "**/scripts/**",
    "**/stencil.*.config.ts",
    "**/test-setup.ts",
    "**/test/**",
    "**/tsconfig.*.json",
    "**/tsconfig.json",
    "**/tslint.json"
  ],
  "command": {
    "clean": {
      "yes": true
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": ["master", "version"],
      "message": "chore(release): release %s",
      "push": false
    }
  }
}
