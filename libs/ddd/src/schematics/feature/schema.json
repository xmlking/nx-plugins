{
  "$schema": "http://json-schema.org/schema",
  "id": "feature-options",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "domain": {
      "type": "string",
      "description": "Domain name"
    },
    "app": {
      "type": "string",
      "description": "app name"
    },
    "lazy": {
      "type": "boolean",
      "description": "Is this feature module lazy loaded?",
      "default": false
    },
    "platform": {
      "description": "runtime platform",
      "alias": "p",
      "type": "string",
      "enum": ["web", "mobile", "desktop", "node", "universal"],
      "x-prompt": "Which platform this module is targeted for?"
    },
    "entity": {
      "type": "string",
      "description": "Optional entity to create for this feature"
    }
  },
  "required": ["name", "domain"]
}
